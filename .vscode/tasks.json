{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "c++_build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "c++_run",
            "type": "shell",
            "command": "./${fileBasenameNoExtension}.exe",
            "dependsOn": [
                "c++_build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "cpp.exe build active file",
            "command": "D:\\minGW\\mingw64\\bin\\cpp.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "D:\\minGW\\mingw64\\bin"
            }
        },
        {
            "type": "shell",
            "label": "g++.exe build active file",
            "command": "D:\\minGW\\mingw64\\bin\\g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "D:\\minGW\\mingw64\\bin"
            }
        }
    ]
}